{
  "variables": {
    "build_number": "{{timestamp}}",
    "centos_arch": "x86_64",
    "iso_base_url": "http://ftp.heanet.ie/pub/centos",
    "iso_checksum_type": "sha256",
    "username": "root",
    "password": "password",
    "disk_size": "10000",
    "timeout": "30m",
    "headless": "true"
  },
  "builders": [
    {
      "name": "vbox",
      "type": "virtualbox-iso",
      "iso_url": "{{user `iso_base_url`}}/{{user `centos_version`}}/isos/{{user `centos_arch`}}/CentOS-{{user `centos_version`}}-{{user `centos_arch`}}-{{user `iso_filename`}}.iso",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_wait_timeout": "{{user `timeout`}}",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_file`}}<enter><wait>"
      ],
      "disk_size": "{{user `disk_size`}}",
      "hard_drive_interface": "sata",
      "guest_os_type": "RedHat_64",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "shutdown_command": "shutdown -P now",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ]
    },
    {
      "name": "vbox4vagrant",
      "type": "virtualbox-iso",
      "iso_url": "{{user `iso_base_url`}}/{{user `centos_version`}}/isos/{{user `centos_arch`}}/CentOS-{{user `centos_version`}}-{{user `centos_arch`}}-{{user `iso_filename`}}.iso",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_wait_timeout": "{{user `timeout`}}",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_file`}}<enter><wait>"
      ],
      "disk_size": "{{user `disk_size`}}",
      "hard_drive_interface": "sata",
      "guest_os_type": "RedHat_64",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "shutdown_command": "shutdown -P now",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ]
    },
    {
      "name": "vmware",
      "type": "vmware-iso",
      "iso_url": "{{user `iso_base_url`}}/{{user `centos_version`}}/isos/{{user `centos_arch`}}/CentOS-{{user `centos_version`}}-{{user `centos_arch`}}-{{user `iso_filename`}}.iso",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_wait_timeout": "{{user `timeout`}}",
      "disk_size": "{{user `disk_size`}}",
      "tools_upload_flavor": "linux",
      "guest_os_type": "centos-64",
      "headless": "{{user `headless`}}",
      "shutdown_command": "shutdown -P now",
      "http_directory": "http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_file`}}<enter><wait>"
      ],
      "vmx_data": {
        "memsize": "1024",
        "numvcpus": "1",
        "vhv.enable": "TRUE"
      }
    },
    {
      "name": "vmware4vagrant",
      "type": "vmware-iso",
      "iso_url": "{{user `iso_base_url`}}/{{user `centos_version`}}/isos/{{user `centos_arch`}}/CentOS-{{user `centos_version`}}-{{user `centos_arch`}}-{{user `iso_filename`}}.iso",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_wait_timeout": "{{user `timeout`}}",
      "disk_size": "{{user `disk_size`}}",
      "tools_upload_flavor": "linux",
      "guest_os_type": "centos-64",
      "headless": "{{user `headless`}}",
      "shutdown_command": "shutdown -P now",
      "http_directory": "http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_file`}}<enter><wait>"
      ],
      "vmx_data": {
        "memsize": "1024",
        "numvcpus": "1",
        "vhv.enable": "TRUE"
      }
    },
    {
      "name": "kvm",
      "type": "qemu",
      "iso_url": "{{user `iso_base_url`}}/{{user `centos_version`}}/isos/{{user `centos_arch`}}/CentOS-{{user `centos_version`}}-{{user `centos_arch`}}-{{user `iso_filename`}}.iso",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_wait_timeout": "{{user `timeout`}}",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{user `headless`}}",
      "shutdown_command": "shutdown -P now",
      "http_directory": "http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_file`}}<enter><wait>"
      ],
      "qemuargs": [
        [ "-m", "1024M"]
      ]
    },
    {
      "name": "kvm4vagrant",
      "type": "qemu",
      "iso_url": "{{user `iso_base_url`}}/{{user `centos_version`}}/isos/{{user `centos_arch`}}/CentOS-{{user `centos_version`}}-{{user `centos_arch`}}-{{user `iso_filename`}}.iso",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_wait_timeout": "{{user `timeout`}}",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{user `headless`}}",
      "shutdown_command": "shutdown -P now",
      "http_directory": "http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_file`}}<enter><wait>"
      ],
      "qemuargs": [
        [ "-m", "1024M"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": "scripts/vbox-tools.sh",
      "only": ["vbox", "vbox4vagrant"]
    },
    {
      "type": "shell",
      "scripts": "scripts/vmware-tools.sh",
      "only": ["vmware", "vmware4vagrant"]
    },
    {
      "type": "shell",
      "scripts": "scripts/vagrant.sh",
      "only": ["vbox4vagrant", "vmware4vagrant", "kvm4vagrant"]
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "CentOS-{{user `centos_version`}}-{{user `centos_arch`}}-{{user `build_number`}}-{{.Provider}}.box",
      "only": ["vbox4vagrant", "vmware4vagrant", "kvm4vagrant"]
    }
  ]
}
